{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "utility",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "Library path",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": {
        "message": "Where should the library be created at"
      }
    }
  },
  "required": ["name"]
}
